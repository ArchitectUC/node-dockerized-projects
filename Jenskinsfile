pipeline {
    agent any
    environment {
        // Define any environment variables needed for your build
    }
    stages {
        stage("checkout") {
            steps {
                checkout scm
            }
        }

        stage("test") {
            steps {
                script {
                    // It's common to use the 'npm ci' command for installing dependencies in CI environments
                    sh 'npm ci'
                    sh 'npm test'
                }
            }
        }

        stage("build") {
            steps {
                sh 'npm run build'
            }
        }
    }
}
